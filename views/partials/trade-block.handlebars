<div class="row">
    <div class="col">
        <form class="trade-form rounded p-3">
    <div class="row gx-2">
        <div class="col">
            <select id="type" class="form-select form-control w-auto">
                <option value="buy">Buy</option>
                {{!-- if current user holdings doesnt contain the stock that has been searched then dont show the sell option --}}
                <option value="sell">Sell</option>
            </select>
        </div>
        <div class="col-auto">
            <input type="number" id="quantity" class="form-control w-auto" placeholder="Enter quantity here"/>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Confirm</button>
        </div>
    </div>
</form>
    </div>
</div>