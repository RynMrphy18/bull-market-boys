<div class="row pt-2">
    <div class="col-12 offset-md-4 col-md-4 mb-3">
        <form class="trade-form rounded p-3">
            <div class="col-12 offset-md-4 col-md-4">
                <select id="type" class="form-select form-control mb-2">
                    <option value="buy">Buy</option>
                    {{!-- if current user holdings doesnt contain the stock that has been searched then dont show the sell option --}}
                    <option value="sell">Sell</option>
                </select>

                <input type="number" id="quantity" class="form-control mb-2 text-center" placeholder="Quantity"/>

                <button type="submit" class="btn btn-primary col-12">Confirm</button>
            </div>
        </form>
    </div>
</div>