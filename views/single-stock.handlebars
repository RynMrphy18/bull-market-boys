<main class="d-flex align-items-center flex-column p-5">
    <div class="symbol-wrapper text-center">
        <h1 class="display-1"><span id="symbol">{{stock.symbol}}</span></h1>
    </div>
    <div id="price-wrapper" class="text-center mt-3">
        <p class="mb-0">Current Price:</p>
        <p class="fs-2"><strong>$<span id="price">{{stock.price}}</span></strong></p>
    </div>
    <div class="row">
        <div class="col m-4 text-center">
            <h6 class="text-center border-bottom text-uppercase">Day</h6>
            <p class="mb-2">High: {{stock.high}}</p>
            <p>Low: {{stock.low}}</p>
        </div>
        <div class="col m-4 text-center">
            <h6 class="text-center border-bottom text-uppercase">Year</h6>
            <p class="mb-2">High: {{stock.yearHigh}}</p>
            <p>Low: {{stock.yearLow}}</p>
        </div>
    </div>

    {{> trade-block}}
</main>

<script src="/javascript/trade.js"></script>