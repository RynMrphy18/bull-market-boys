
<div class="row pb-3">
    <div class="col-12 text-center">
        <h2>Hello, {{user.username}}!</h2>
    </div>
</div>
<div class="row">
    <div class="col-4 ">
        <div id="cash" class="bg-success text-white text-center rounded-pill p-3">
            <h3><span class="iconify" data-icon="emojione:money-bag"></span> Cash: ${{user.cash}}</h3>
        </div>
    </div>
    <div class="col-8">
        <article class="holding-list bg-warning rounded p-4 bg-opacity-25">
            {{#if holdings}}
            <h3 class="text-center mb-4">Your Current Holdings:</h3>
            <div class="d-flex flex-row justify-content-evenly">
                {{#each holdings as |holding|}}
                    <div class="text-center p-3 bg-warning rounded-3">
                        {{> holdings holding.dataValues}}
                    </div>
                {{/each}}
            </div>
            {{else}}
            <p class="text-center mb-0">No holdings yet.</p>
            {{/if}}
        </article>
    </div>
</div>