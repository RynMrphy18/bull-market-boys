<main class="d-flex align-items-center flex-column p-5">
    <div class="row">
        <div class="col-12">
            <div class="float-start text-center">
                <h2>Hello, {{user.username}}!</h2>
            </div>
            <div class="float-end">
                <h2><span class="iconify" data-icon="emojione:money-bag"></span> Cash: ${{cash}}</h2>
            </div>
        </div>

        <div class="d-flex justify-content-center mt-3">
            <form class="search-form rounded col-12" method="POST" action="/search">
                <div class="mb-2">
                    <input type="text" id="search-field" name="symbol" class="form-control symbolSearch" maxlength="5" placeholder="Enter stock symbol here" required/>
                </div>
                {{#if error}}
                <h6>Can't locate that symbol.</h6>
                {{/if}}
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary col-12">Search</button>
                </div>
            </form>
        </div>

        <div class="col-12 mt-3">
            <article class="holding-list bg-warning rounded p-4 bg-opacity-25">
                {{#if holdings}}
                <h3 class="text-center mb-4">Your Current Holdings:</h3>
                <div class="d-flex flex-row justify-content-evenly">
                    {{#each holdings as |holding|}}
                        {{> holdings-block holding.dataValues}}
                    {{/each}}
                </div>
                {{else}}
                <p class="text-center mb-0">No holdings yet.</p>
                {{/if}}
            </article>
        </div>
    </div>
</main>